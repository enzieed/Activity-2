#include <iostream>
using namespace std; 
int main ()
{
	int m, d, y;
	
	cout << "Enter the month: "; 
	cin >> m;
	cout << "Enter the day: "; 
	cin >> d;
	cout <<"Enter the year: "; 
	cin >> y;
	
	switch(month)
	{
		case 1:
			cout << "Jan "<< d << ", " << y;
			break;
		case 2:
			cout << "Feb "<< d << ", " << y;
			break;
		case 3:
			cout << "Mar "<< d << ", " << y;
			break;
		case 4:
			cout << "April"<< d << ", " << y;
			break;
		case 5:
			cout << "May "<< d << ", " << y;
			break;
		case 6:
			cout << "June "<< d << ", " << y
			break; 
		case 7:
			cout << "Jul"<< d << ", " << y;
