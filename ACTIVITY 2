		case 8:
			cout << "Aug"<< d << ", " << y;
			break;
		case 9:
			cout << "Sept "<< d << ", " << y;
			break;
		case 10:
			cout << "Oct"<< d << ", " << y;
			break;
		case 11:
			cout << "Nov"<< d << ", " << y;
			break;
		case 12:
			cout << "Dec "<< d << ", " << y;
			break;	
		default:
			cout << "invalid date!";
			break;																																	
	}
